    <button id="btn" disabled></button>
    
    <script>

// Get the necessary elements
var clickButton = document.getElementById("clickButton");
var highCountElement = document.getElementById("highCount");
var countElement = document.getElementById("count");
var timerElement = document.getElementById("timer");
var result = document.getElementById("result");
var btn = document.getElementById("btn");


var randomColor1 = "#" + Math.floor(Math.random() * 16777215).toString(16);
var randomColor2 = "#" + Math.floor(Math.random() * 16777215).toString(16);
var gradientValue = "linear-gradient(to right, " + randomColor1 + ", " + randomColor2 + ")";
clickButton.style.background = gradientValue;

clickButton.addEventListener("click", myFunction);
function myFunction() {
  var randomColor1 = "#" + Math.floor(Math.random() * 16777215).toString(16);
  var randomColor2 = "#" + Math.floor(Math.random() * 16777215).toString(16);

  var gradientValue = "linear-gradient(to right, " + randomColor1 + ", " + randomColor2 + ")";
  clickButton.style.background = gradientValue;
}

// Set initial values
var count = 0;
var highCount = 0;
var timeLeft = 10;
var timerInterval;

// Update the count element with the new count value
function updateCount() {
  if (count < 10) {
    countElement.textContent = "0" + count;
  } else {
    countElement.textContent = count;
  }  
}

// Update the high count element with the new high count value
function updateHighCount() {
  highCountElement.textContent = highCount;
}

// Increase the count by 1 when the button is clicked
clickButton.addEventListener("click", function() {
  count++;
  updateCount();

  if (count > highCount) {
    highCount = count;
    updateHighCount();
  }
});

// Update the timer element with the new time left
function updateTimer() {
  var minutes = Math.floor(timeLeft / 60);
  var seconds = timeLeft % 60;
  timerElement.textContent = `${minutes < 10 ? '0' + minutes : minutes}:${seconds < 10 ? '0' + seconds : seconds}`;

  if (timeLeft === 0) {
    clearInterval(timerInterval);
    clickButton.disabled = true;
    btn.disabled = false;
    result.innerHTML = ("Your highest score is " + highCount);
    count = 0;
    // updateCount();
  }

  timeLeft--;
}

// Start the countdown timer
function startTimer() {
  timerInterval = setInterval(updateTimer, 1000);
}

// Enable the button and start the timer when the page loads
window.addEventListener("load", function() {
  clickButton.disabled = true;
  btn.innerHTML = "PLAY";
  btn.disabled = false;
});

btn.addEventListener("click", refreshPage);
function refreshPage() {
  startTimer();
  clickButton.disabled = false;
  btn.disabled = true;   
  timeLeft = 10;
  timerInterval;
  btn.innerHTML = "PLAY AGAIN";
  countElement.textContent = "00";
}

    </script>
